-- 1️⃣ Create a new database
CREATE DATABASE IF NOT EXISTS atm_db;

-- 2️⃣ Switch to that database
USE atm_db;

-- 3️⃣ Create the 'users' table
CREATE TABLE IF NOT EXISTS users (
  pin VARCHAR(10) PRIMARY KEY,
  balance DOUBLE DEFAULT 0
);

-- 4️⃣ Create the 'transactions' table
CREATE TABLE IF NOT EXISTS transactions (
  id INT AUTO_INCREMENT PRIMARY KEY,
  pin VARCHAR(10),
  type VARCHAR(20),
  amount DOUBLE,
  date TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- 5️⃣ Insert a sample user
INSERT INTO users (pin, balance) VALUES ('1234', 1000.0)
  ON DUPLICATE KEY UPDATE balance = balance;
  SHOW DATABASES;
USE atm_db;
SHOW TABLES;
SELECT * FROM users;
CREATE TABLE transactions (
    id INT AUTO_INCREMENT PRIMARY KEY,
    pin INT,
    type VARCHAR(20),
    amount DOUBLE,
    date TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
SELECT * FROM transactions;





